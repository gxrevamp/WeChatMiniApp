.box {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #3CB371;
    padding-top: 200rpx;
    box-sizing: border-box;
}
.title {
    display: block;
    width: 100%;
    line-height: 120rpx;
    font-size: 80rpx;
    font-weight: 700;
    color: #fff;
    text-align: center;
}
.btn {
    width: 300rpx;
    margin-top: 200rpx;
    font-size: 30rpx;
    font-weight: 700;
    color: #off;
}
.thanks {
    position: absolute;
    width: 100%;
    text-align: center;
    color: #ccc;
    bottom: 30rpx;
    font-size: 30rpx;
}